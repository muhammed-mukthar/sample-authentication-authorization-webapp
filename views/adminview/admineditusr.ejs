<div class="container mt-5 allclass">
    <div class="d-flex justify-content-center ">
   <h1>Edit User</h1>

 </div>
    <div class="d-flex justify-content-center">


<form action="/admin/edituser/<%=userdata._id%>" method="POST" id="form2">
<%if(editusererror){%>
  <p><%=editusererror%></p>
  <%}%>
    <!-- userName input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form5Example1">UserName</label>
      <input type="text" id="form5Example1" name="username" placeholder="username" value="<%=userdata.username%>" class="form-control" />
    
    </div>
  
    <!-- password input -->
    <!-- <div class="form-outline mb-4">
        <label class="form-label" for="form5Example2">Password</label>
      <input type="password" id="form5Example2" name="password" placeholder="Password" value="<%=userdata.password%>" class="form-control" />
     
    </div> -->

    <!-- name -->

    <div class="form-outline mb-4">
      <label class="form-label" for="form5Example2">Name</label>
    <input type="text" id="form5Example2" name="name" placeholder="Name" value="<%=userdata.name%>" class="form-control" />
   
  </div>

    <!-- Email -->

  <div class="form-outline mb-4">
    <label class="form-label" for="form5Example3">Email</label>
  <input type="email" id="form5Example3" name="email" placeholder="Email" value="<%=userdata.email%>" class="form-control" />
 
</div>
   
  
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
  </form>
</div>
</div>

<script>
jQuery('#form2').validate({
  rules:{
    username:"required",
    name:"required",
    email:{
      required:true,
      email:true
    },
    

  },messages:{
    username:"please enter valid username",
    name:"please enter name",
    email:"please enter valid email"
  },
  submitHandler:function(form){
    form.submit();
  }
})

</script>


